<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haoliang.mapper.EvmAddressPoolMapper">

    <select id="randomGetAddress" resultType="com.haoliang.model.usd.EvmAddressPool">
        select
            id,coin_id coinId, address,keystore, pwd,coin_type coinType
        from
            evm_token_address_pool
        where
            coin_type = #{coinType}
        order by
            RAND() LIMIT 1
    </select>

    <delete id="deleteByAddress">
        delete from
            evm_token_address_pool
        where
            address = #{address}
    </delete>

</mapper>
